{
  "title": "System General keybindings",
  "rules": [
    {
      "description": "System - Screen Capture to Clipboard",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "3",
            "modifiers": {
              "mandatory": ["left_command", "left_shift"]
            }
          },
          "to": [
            {
              "shell_command": "screencapture -ic"
            }
          ]
        }
      ]
    },
    {
      "description": "System - Paste and Match Style",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "v",
            "modifiers": {
              "mandatory": ["left_command", "left_shift"]
            }
          },
          "to": [
            {
              "key_code": "v",
              "modifiers": ["left_command", "left_shift", "left_option"]
            }
          ]
        }
      ]
    },
    {
      "description": "System - Edit Dotfiles",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "e",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "shell_command": "$EDITOR ~/.dotfiles"
            }
          ]
        }
      ]
    },
    {
      "description": "System - Open System Settings",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "comma",
            "modifiers": {
              "mandatory": ["left_command", "left_shift"]
            }
          },
          "to": [
            {
              "shell_command": "open '/System/Applications/System Settings.app'"
            }
          ]
        }
      ]
    },
    {
      "description": "System - Drop Last Downloaded File",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "d",
            "modifiers": {
              "mandatory": ["left_command", "left_control"]
            }
          },
          "to": [
            {
              "shell_command": "open -a Dropover \"$HOME/Downloads/$(eza -s created --no-quotes $HOME/Downloads | tail -n 1)\""
            }
          ]
        }
      ]
    },
    {
      "description": "System Motion - Ctrl+hjkl to Arrow Keys",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ]
        }
      ]
    }
  ]
}
